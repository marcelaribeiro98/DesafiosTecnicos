@page "{id:int}"
@model FIAP.GestaoEscolar.Admin.Pages.Class.EditModel
@{
    ViewData["Title"] = "Editar Turma";
}

<h1>Editar Turma</h1>

<form method="post">

    <input type="hidden" asp-for="Class.Id" />

    <div class="form-group">
        <label asp-for="Class.ClassName" class="control-label"></label>
        <input asp-for="Class.ClassName" class="form-control" />
        <span asp-validation-for="Class.ClassName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Class.CourseId" class="control-label"></label>
        <input asp-for="Class.CourseId" class="form-control" />
        <span asp-validation-for="Class.CourseId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Class.Year" class="control-label"></label>
        <input asp-for="Class.Year" class="form-control" />
        <span asp-validation-for="Class.Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Class.Active" class="control-label"></label>
        <select asp-for="Class.Active" class="form-control">
            <option value="true">Sim</option>
            <option value="false">Não</option>
        </select>
        <span asp-validation-for="Class.Active" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Editar</button>
</form>

<a asp-page="./Index">Voltar</a>
