@page
@model FIAP.GestaoEscolar.Admin.Pages.Student.CreateModel
@{
    ViewData["Title"] = "Adicionar Aluno";
}

<h1>Adicionar Aluno</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Student.Name" class="control-label"></label>
        <input asp-for="Student.Name" class="form-control" />
        <span asp-validation-for="Student.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Student.Username" class="control-label"></label>
        <input asp-for="Student.Username" class="form-control" />
        <span asp-validation-for="Student.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Student.Password" class="control-label"></label>
        <input asp-for="Student.Password" class="form-control" />
        <span asp-validation-for="Student.Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>

<a asp-page="./Index">Voltar</a>
