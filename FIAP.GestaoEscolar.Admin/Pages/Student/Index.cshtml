@page
@model FIAP.GestaoEscolar.Admin.Pages.Student.IndexModel
@{
    ViewData["Title"] = "Alunos";
}

<h1>Alunos</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Usuário</th>
            <th>Ativo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListStudents)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Username</td>
                <td>@(item.Active ? "Ativo" : "Inativo")</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a> |
                    <form method="post" asp-page-handler="Activate" asp-route-id="@item.Id" style="display:inline;">
                        <button type="submit" class="btn @(item.Active ? "btn-danger" : "btn-secondary") btn-sm">@(!@item.Active ? "Ativar" : "Inativar")</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./Create">Adicionar</a>
